@model MyIdentityApp.Models.Filme

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Create</h1>

<h4>Filme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produtora" class="control-label"></label>
                <input asp-for="Produtora" class="form-control" />
                <span asp-validation-for="Produtora" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Genero" class="control-label"></label>

                @*Select para Enum*@
                <select class="form-control" asp-for="Genero" asp-items="Html.GetEnumSelectList<Genero>()">
                    <option>-- Selecione --</option>
                </select>

                <span asp-validation-for="Genero" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
